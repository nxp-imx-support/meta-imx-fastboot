---
 board/freescale/imx8mp_evk/spl.c | 16 +++++++++++++++-
 include/configs/imx8mp_evk.h     |  4 +++-
 2 files changed, 18 insertions(+), 2 deletions(-)

diff --git a/board/freescale/imx8mp_evk/spl.c b/board/freescale/imx8mp_evk/spl.c
index b7b21f0b490..e7b89a508d5 100644
--- a/board/freescale/imx8mp_evk/spl.c
+++ b/board/freescale/imx8mp_evk/spl.c
@@ -1,6 +1,6 @@
 // SPDX-License-Identifier: GPL-2.0-or-later
 /*
- * Copyright 2018-2019, 2021 NXP
+ * Copyright 2018-2019, 2021, 2024 NXP
  *
  */
 
@@ -28,9 +28,23 @@
 #include <mmc.h>
 #include <asm/arch/ddr.h>
 #include <asm/sections.h>
+#include <serial.h>
 
 DECLARE_GLOBAL_DATA_PTR;
 
+#ifdef CONFIG_SPL_OS_BOOT
+int spl_start_uboot(void) {
+	if (IS_ENABLED(CONFIG_SPL_SERIAL) && serial_tstc() && serial_getc()) {
+	/* break into full u boot if any key is pressed */
+		while(serial_tstc()) { /* eat up all the remaining characters */
+			serial_getc();
+		}
+		return 1;
+	}
+	return 0; // start the Kernel
+}
+#endif
+
 int spl_board_boot_device(enum boot_device boot_dev_spl)
 {
 #ifdef CONFIG_SPL_BOOTROM_SUPPORT
diff --git a/include/configs/imx8mp_evk.h b/include/configs/imx8mp_evk.h
index 9d34c54d66d..e5eb99b174b 100644
